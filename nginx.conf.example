# ATRIA 360 Nginx Configuration
# Place this file in: /etc/nginx/sites-available/atria.peop360.com
# Create symlink: sudo ln -s /etc/nginx/sites-available/atria.peop360.com /etc/nginx/sites-enabled/

# Upstream definitions for backend services
upstream atria_candidate {
    server 127.0.0.1:4901;
    keepalive 32;
}

upstream atria_admin {
    server 127.0.0.1:4903;
    keepalive 32;
}

upstream atria_api {
    server 127.0.0.1:4902;
    keepalive 32;
}

# HTTP Server - Redirect to HTTPS (enable after SSL setup)
server {
    listen 80;
    listen [::]:80;
    server_name atria.peop360.com www.atria.peop360.com;
    
    # Uncomment after SSL certificate is installed
    # return 301 https://$server_name$request_uri;
    
    # Temporary: serve content on HTTP (comment out after SSL)
    root /home/ashok/atria-proj/public;
    index index.html;
    
    # Landing page
    location = / {
        try_files /index.html =404;
    }
    
    # Candidate Portal
    location /candidate {
        proxy_pass http://atria_candidate;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }
    
    # Admin Portal
    location /admin {
        proxy_pass http://atria_admin;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }
    
    # API Backend
    location /api {
        proxy_pass http://atria_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # CORS headers
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, Accept' always;
        
        if ($request_method = 'OPTIONS') {
            return 204;
        }
    }
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

